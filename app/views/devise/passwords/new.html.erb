<div class="container login-signup-card drop-shadow">

  <h2>Forgot your password?</h2>

  <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :email,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "email", class: "p-3"} %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Send me reset password instructions", class: "primary-button btn btn-block" %>
    </div>
  <% end %>

  <div class="mt-3">
   <%= render "devise/shared/links" %>
  </div>
</div>
