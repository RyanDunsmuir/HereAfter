<div class="container login-signup-card drop-shadow">

  <h2 class="text-center">Log in</h2>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email", class: "p-3" } %>
      <%= f.input :password,
                  required: false,
                  input_html: { autocomplete: "current-password", class: "p-3" } %>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Log in", class: "primary-button btn btn-block" %>
    </div>
  <% end %>

  <div class="mt-3">

    <%= render "devise/shared/links" %>

  </div>


</div>
