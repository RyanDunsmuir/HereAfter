<%= render 'shared/sidebar' %>

<div class="body-container">
  <div class="inbox-title">
    <h1>Your Badges</h1>
  </div>

  <div class="container">

    <% @badges.each do |badge|%>
    <ul>

    <%= link_to badge_path(badge) do %>
        <li>
          <%= badge.title %> <br>
          <%= badge.hint %> <br>
          <%= badge.image_url %>
        </li>
      </ul>
      <% end %>
    <% end %>

  </div>

</div>
