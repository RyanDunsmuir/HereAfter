<%= render 'shared/sidebar' %>

<div class="body-container">
  <div class="inbox-title ml-5">
    <h1>Badges</h1>
  </div>


    <div class="inbox-container-badges ">

    <%= link_to profile_id_path(params[:profile]) do %>
      <i class="back-button back-button-badges fas fa-chevron-circle-left m-3 position-correct"></i>
    <% end %>

      <div class="cards mb-5">
        <% @badges.each do |badge| %>
        <div class="card-trip">
          <%= image_tag(badge.image_url, class: "badge-image") %>
          <p class="text-center m-3"><em>Hint: <%= badge.hint %></em></p>
              </div>
          <% end %>
      </div>
    </div>

</div>
