<div class="modal fade bd-example-modal"tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">

    <div class="modal-content" style="border-radius: 25px;">

      <div class="modal-header">

        <h2 class="text-center" style="margin-left: 170px;">Log in</h2>


        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>

      </div>

      <div class="modal-body">

        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="form-inputs">
                <%= f.input :email,
                            required: false,
                            autofocus: true,
                            input_html: { autocomplete: "email", class: "p-3" } %>
                <%= f.input :password,
                            required: false,
                            input_html: { autocomplete: "current-password", class: "p-3" } %>
                <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
            </div>


        <div class="form-actions ">
            <%= f.button :submit, "Log in", :class => "mt-4 primary-button btn-block" %>
        </div>

        <%= link_to "Sign up", new_registration_path(resource_name), class: "secondary-button my-2 w-100 btn-block" %>

        <div class="signup-link my-3 text-center">
          <%= link_to "Forgot your password?", new_password_path(resource_name) %>
        </div>

        <% end %>

      </div>

      </div>
    </div>
</div>
