        <%= link_to badges_path, class: "active-tab sidebar-tab badges p-3 m-1" do %>
          <li>
            <i class="main-icon fas fa-certificate ml-2"></i><span class="ml-3">Badges</span>
          </li>
        <% end %>

    <!-- Removes class active-tab to Badges tab -->
      <% else %>

        <%= link_to badges_path,class: "sidebar-tab badges p-3 m-1" do %>
          <li>
            <i class="main-icon fas fa-certificate ml-2"></i><span class="ml-3">Badges</span>
