<div class="modal fade signin_bd-example-modal"tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">

    <div class="modal-content">

      <div class="modal-header">

        <h2 class="text-center" style="margin-left: 177px;" >Sign Up</h2>


        <button type="button" class="close" style="margin: 0" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>

      </div>

      <div class="modal-body">

       <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
       <%= f.error_notification %>

        <div class="form-inputs">
          <%= f.input :first_name,
              required: true,
              autofocus: true,
              input_html: { autocomplete: "First name", class: "p-3"}%>
          <%= f.input :last_name,
              required: true,
              input_html: { autocomplete: "Last name", class: "p-3"}%>
          <%= f.input :email,
              required: true,
              input_html: { autocomplete: "email", class: "p-3"}%>
          <%= f.input :username,
              required: true,
              input_html: { autocomplete: "username", class: "p-3"}%>
          <%= f.input :password,
              required: true,
              hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
              input_html: { autocomplete: "new-password", class: "p-3"} %>
          <%= f.input :password_confirmation,
              required: true,
              input_html: { autocomplete: "new-password", class: "p-3"} %>
        </div>


       <div class="signup-link mb-3">
        <span>Already have an account? <%= link_to "Log in", new_session_path(resource_name) %> instead :)</span>
       </div>
       <div class="form-actions ">
        <%= f.button :submit, "Sign up", :class => "primary-button btn-block" %>
      </div>
     <% end %>
     </div>
     </div>
  </div>
</div>
