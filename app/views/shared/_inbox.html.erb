
<div class="inbox-title">
  <h1>Your Capsules</h1>

  <%= link_to "+ CAPSULE", "", data: {toggle: "modal", target: ".create_capsule_bd-example-modal"}, class: "primary-button drop-shadow" %>

</div>

<div class="inbox-container">

  <!-- arrived & unread capsules -->
  <% current_user.capsules.arrived.unread.each do |capsule| %>
   <%= render 'shared/inbox_capsule_card_unread', capsule: capsule %>
  <% end %>

  <!-- not arrived capsules -->
  <% current_user.capsules.not_arrived.reverse.each do |capsule| %>
   <%= render 'shared/inbox_capsule_card_not_arrived', capsule: capsule %>
  <% end %>

  <!-- arrived & read -->
  <% current_user.capsules.arrived.read.each do |capsule| %>
   <%= render 'shared/inbox_capsule_card_read', capsule: capsule %>
  <% end %>


</div>

<%= render 'shared/capsule_creation' %>


